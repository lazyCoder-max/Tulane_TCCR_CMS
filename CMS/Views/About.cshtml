@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
    Layout = "InnerPage.cshtml";
    var about = Model.Root().Descendant<About>();
    var services = Model.Root().Descendants<FacilityService>().Where(x => x.IsVisible()).OrderByDescending(y => y.CreateDate).ToList();
    var banner = Model.Root().Descendant<InnerBanner>();
    int counter = 1;
    var images = @about.Image.ToList();
}
<!-- Page Title -->
<section class="page-title centred" style="background-image: url(@banner?.BackgroundImage?.Url());">
    <div class="auto-container">
        <div class="content-box">
            <div class="shape"></div>
            <div class="title">
                <h1>About Us</h1>
            </div>
            <ul class="bread-crumb clearfix">
                <li><a href="index.html">Home</a></li>
                <li>About Us</li>
            </ul>
        </div>
    </div>
</section>
<!-- about-style-four -->
<section class="about-style-four sec-pad">
    <div class="auto-container">
        <div class="row clearfix">
            <div class="col-lg-6 col-md-12 col-sm-12 image-column">
                <div class="image_block_5">
                    <div class="image-box">
                        <div class="shape">
                            <div class="shape-3" style="background-image: url(../../assets/images/shape/shape-40.png);"></div>
                            <div class="shape-4" style="background-image: url(../../assets/images/shape/shape-40.png);"></div>
                            <div class="shape-5" style="background-image: url(../../assets/images/shape/shape-41.png);"></div>
                        </div>
                        <figure class="image image-1 paroller"><img src="@images[0].Url()" alt=""></figure>
                        <figure class="image image-2 paroller-2"><img src="@images[1].Url()" alt=""></figure>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-12 col-sm-12 content-column">
                <div class="content_block_1">
                    <div class="content-box ml-70">
                        <div class="sec-title">
                            <h6>About Research</h6>
                            <h2>@about.AboutTitle</h2>
                        </div>
                        <div class="bold-text">
                            <p>@about.ShortDescription</p>
                        </div>
                        @if (services.Count>=2)
                        {
                            <div class="singl-block centred">
                                <div class="row clearfix">
                                    <div class="col-lg-6 col-md-6 col-sm-12 single-column">
                                        <div class="single-item">
                                            <div class="icon-box"><i class="icon-36"></i></div>
                                            <h4>@services[0].Title</h4>
                                            <p>@services[0].ShortDescription</p>
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-sm-12 single-column">
                                        <div class="single-item">
                                            <div class="icon-box"><i class="icon-37"></i></div>
                                            <h4>@services[1].Title</h4>
                                            <p>@services[1].ShortDescription</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- about-style-four end -->
<!-- research-style-two -->
<section class="research-style-two centred bg-color-1">
    <div class="pattern-layer">
        <div class="pattern-1" style="background-image: url(assets/images/shape/shape-65.png);"></div>
        <div class="pattern-2" style="background-image: url(assets/images/shape/shape-66.png);"></div>
    </div>
    <div class="auto-container">
        <div class="sec-title centred">
            <h6>About Us</h6>
            <h2>What can our facility do for patients and researchers?</h2>
        </div>
        <div class="inner-content">
            <div class="shape" style="background-image: url(assets/images/shape/shape-64.png);"></div>
            <div class="row clearfix">
                @foreach (var service in services)
                {
                    <div class="col-lg-3 col-md-6 col-sm-12 research-block">
                        <div class="research-block-two wow fadeInUp animated" data-wow-delay="00ms" data-wow-duration="1500ms">
                            <div class="inner-box">
                                <figure class="image-box">
                                    <img src="@service.Image.Url()" alt="">
                                    <h5>@counter</h5>
                                </figure>
                                <div class="text">
                                    <h4>@service.Title</h4>
                                </div>
                            </div>
                        </div>
                    </div>

                    {
                        counter += 1;
                    }
                }

            </div>
        </div>
    </div>
</section>
<!-- research-style-two end -->