@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
	Layout = "InnerPage.cshtml";
    var banner = Model.Root().Descendant<InnerBanner>();
    var investigatorTraining = Model.Root()?.Descendant<InvestigatorTraining>()?.Children.Cast<Training>().ToList();
}
<!-- Page Title -->
<section class="page-title centred" style="background-image: url(@banner?.BackgroundImage?.Url());">
    <div class="auto-container">
        <div class="content-box">
            <div class="shape"></div>
            <div class="title">
                <h1>Training</h1>
            </div>
            <ul class="bread-crumb clearfix">
                <li><a href="index.html">Home</a></li>
                <li>Training</li>
                <li>Investigators Training</li>
            </ul>
        </div>
    </div>
</section>
<!-- events-section -->
<section class="events-section sec-pad bg-color-1">
    <div class="pattern">
        <div class="pattern-1 wow zoomIn animated animated" data-wow-delay="00ms" data-wow-duration="1500ms" style="background-image: url(assets/images/shape/shape-11.png);"></div>
        <div class="pattern-2 wow zoomIn animated animated" data-wow-delay="00ms" data-wow-duration="1500ms" style="background-image: url(assets/images/shape/shape-12.png);"></div>
    </div>
    <div class="auto-container">
        <div class="sec-title centred">
            <h6>Our Events</h6>
            <h2>Upcomming Investigators Training</h2>
        </div>
        <div class="row clearfix">
            @foreach (var training in investigatorTraining)
            {
                <div class="col-lg-3 col-md-6 col-sm-12 event-block">
                    <div class="event-block-one wow fadeInUp animated" data-wow-delay="00ms" data-wow-duration="1500ms">
                        <div class="inner-box">
                            <div class="post-date"><h3>@training.StartDateAndTime.Day <span>@training.StartDateAndTime.ToString("MMM")</span></h3></div>
                            <h4><a href="@training.Url()">@training.Title</a></h4>
                            <ul class="info clearfix">
                                @if (training.Location != null)
                                {
                                    <li><i class="icon-21"></i>@training.Location</li>
                                }
                                <li><i class="icon-22"></i>@training.StartDateAndTime.ToShortDateString() - @training.EndDate.ToShortDateString()</li>
                            </ul>
                            <p>@training.ShortDescription</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<!-- events-section end -->