@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
    Layout = "InnerPage.cshtml";
    var team = Model.Root().Descendants<Staff>().SingleOrDefault();
}
<!-- Page Title -->
<section class="page-title centred" style="background-image: url(../../assets/images/background/page-title.jpg);">
    <div class="auto-container">
        <div class="content-box">
            <div class="shape"></div>
            <div class="title">
                <h1>Our Staff</h1>
            </div>
            <ul class="bread-crumb clearfix">
                <li><a href="index.html">Home</a></li>
                <li>Our Staff</li>
                <li>@team.PersonsName</li>
            </ul>
        </div>
    </div>
</section>
<!-- team-details -->
<section class="team-details">
    <div class="auto-container">
        <div class="team-details-content">
            <div class="row align-items-center clearfix">
                <div class="col-lg-6 col-md-6 col-sm-12 image-column">
                    <div class="image_block_2">
                        <div class="image-box">
                            <div class="shape">
                                <div class="shape-1 rotate-me" style="background-image: url(../../assets/images/shape/shape-8.png);"></div>
                                <div class="shape-2" style="background-image: url(../../assets/images/shape/shape-9.png);"></div>
                                <div class="shape-3 rotate-me" style="background-image: url(../../assets/images/shape/shape-10.png);"></div>
                                <div class="shape-4"></div>
                            </div>
                            @if (team.Photo == null)
                            {
                                <figure class="image"><img src="~/assets/images/team/team-1.png" alt=""></figure>
                            }
                            else
                            {
                                <figure class="image"><img src="@team.Photo.Content.Url()" alt=""></figure>
                            }
                        </div>
                    </div>
                </div>

                <div class="col-lg-6 col-md-6 col-sm-12 content-column">
                    <div class="content_block_2">
                        <div class="content-box">
                            <div class="sec-title">
                                <h2>@team.PersonsName</h2>
                                <p>@team.Role</p>
                                <p>@team.Address</p>
                            </div>
                            @if(team.Biography!=null)
                            {
                                <div class="text">
                                    <h3>Biography</h3>
                                    <p>@team.Biography</p>
                                </div>
                            }
                            @if (team.PhoneNumber.ToString().Length>=1 || team.Email != null)
                            {
                                <ul class="info clearfix">
                                    @if (team.PhoneNumber.ToString().Length >= 1 != null)
                                    {
                                        <li><i class="icon-28"></i>Call: <a href="tel:@team.PhoneNumber">@team.PhoneNumber</a></li>
                                    }
                                    @if (team.Email != null)
                                    {
                                        <li><i class="icon-52"></i>Email: <a href="mailto:@team.Email">@team.Email</a></li>
                                    }
                                </ul>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<br />
<!-- team-details end -->